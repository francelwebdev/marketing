  </div>
  <div class="flex items-center justify-center bg-grey-lighter py-3 mt-2 border-t border-grey-light">
    <%= link_to root_path do %>
      <%= render_svg 'jumpstart-mark', styles: "fill-current text-grey-darker hover:text-grey-darkest" %>
    <% end %>
    <div class="ml-4 text-grey-darker text-sm flex-no-shrink">© <%= Date.current.year %> <%= Jumpstart.config.business_name %></div>
  </div>
