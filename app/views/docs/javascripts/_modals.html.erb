<div class="mb-10">
<h3 class="h2 mb-2 pb-2">Modals</h3>

  <h4 class="uppercase text-grey-dark tracking-wide font-brand-semibold text-sm border-b border-grey-light pb-3 mb-3">Small</h4>

  <div data-controller="modal">
    <button class="btn btn-primary" data-action="click->modal#open">Open Small Modal</button>

    <div data-target="modal.container" class="hidden animated fadeIn">
      <div class="fixed z-50 pin-t pin-l w-full h-full table" style="background-color: rgba(0, 0, 0, 0.8);">
        <div data-target="modal.background" data-action="click->modal#closeBackground" class="table-cell align-middle">

          <div class="bg-white mx-auto rounded shadow p-8 max-w-sm">
            <h4>Small Modal Content</h4>
            <p>This is an example modal dialog box.</p>

            <div class="flex justify-end items-center flex-wrap mt-6">
              <button class="btn btn-white primary mr-2">Does nothing</button>
              <button class="btn btn-primary" data-action="click->modal#close">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

